{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "build/",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable"
    ],
    "exclude": [
      "node_modules"
    ]
  }
}
